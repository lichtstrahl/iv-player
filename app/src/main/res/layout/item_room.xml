<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/stdMargin"
    android:layout_marginBottom="@dimen/stdMargin"
    android:backgroundTint="@color/notification_background"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:id="@+id/layoutBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/viewRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/stdMargin"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="@tools:sample/cities"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/viewRoomState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewRoomName"
            android:layout_alignStart="@id/viewRoomName"
            tools:text="@tools:sample/cities"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/viewEmailPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/stdMargin"
            tools:text="@tools:sample/full_names" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/viewEmailPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewEmailPlayer1"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/stdMargin"
            tools:text="@tools:sample/full_names" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
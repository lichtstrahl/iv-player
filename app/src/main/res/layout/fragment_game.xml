<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <root.iv.ivplayer.game.view.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBlock"
        />

    <LinearLayout
        android:id="@+id/bottomBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/stdMargin">
        <TextView
            android:id="@+id/labelRoomStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_room_status"
            android:layout_gravity="center_vertical"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchRoomState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_margin="@dimen/stdMargin"/>
    </LinearLayout>

</RelativeLayout>